   <%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= todayDay %> </h1>
    </div>

    <div class="box">
        <form action="/delete" method="post">
        <% newItems.forEach(function(newItem){ %>
        <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= newItem._id %>" >
            <p> <%= newItem.name %> </p>
        </div>
        <% }) %>
        <input type="hidden" name="listName" value="<%= todayDay %>"></input>
       </form>

        <form class="item" action="/" method="post">
            <input type="text" name="nextItem" placeholder="New item" autocomplete="off" required autofocus>
            <button type="submit" name="list" value= <%= todayDay %> >+</button>
        </form>

    </div>

    <%- include("footer") -%>
